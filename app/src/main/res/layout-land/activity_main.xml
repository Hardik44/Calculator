<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.hardik.calculator.MainActivity"
    >


    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="right"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:cursorVisible="false"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="1"
        android:textColor="#2658d6"
        android:gravity="center"
        android:id="@+id/num1"
        android:textSize="35dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="2"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num2"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="3"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num3"
        android:layout_alignBaseline="@+id/num2"
        android:layout_alignBottom="@+id/num2"
        android:layout_toRightOf="@+id/num2"
        android:layout_toEndOf="@+id/num2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="4"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num4"
        android:layout_alignTop="@+id/num5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="5"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num5"
        android:layout_above="@+id/numEqu"
        android:layout_toLeftOf="@+id/num3"
        android:layout_toStartOf="@+id/num3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="6"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num6"
        android:layout_alignTop="@+id/num5"
        android:layout_alignLeft="@+id/num3"
        android:layout_alignStart="@+id/num3" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="7"
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/num7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="8"
        android:textSize="35dp"
        android:id="@+id/num8"
        android:textColor="#2658d6"
        android:layout_alignTop="@+id/num7"
        android:layout_toRightOf="@+id/num4"
        android:layout_toEndOf="@+id/num4" />

    <Button
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:text="9"
        android:textSize="35dp"
        android:id="@+id/num9"
        android:textColor="#2658d6"
        android:layout_alignTop="@+id/num7"
        android:layout_toLeftOf="@+id/num0"
        android:layout_toStartOf="@+id/num0" />

    <Button
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:text="0"
        android:textColor="#2658d6"
        android:textSize="35dp"
        android:id="@+id/num0"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/num6"
        android:layout_toEndOf="@+id/num6" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="."
        android:textSize="35dp"
        android:textColor="#2658d6"
        android:id="@+id/numDot"
        android:layout_alignTop="@+id/num6"
        android:layout_alignLeft="@+id/num0"
        android:layout_alignStart="@+id/num0" />

    <Button
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:text="="
        android:textSize="35dp"
        android:id="@+id/numEqu"
        android:background="#de7e16"
        android:layout_alignBaseline="@+id/num0"
        android:layout_alignBottom="@+id/num0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="62dp"
        android:text="\u00F7"
        android:textSize="35dp"
        android:id="@+id/Dvd"
        android:background="#de7e16"
        android:layout_alignTop="@+id/minuse"
        android:layout_toLeftOf="@+id/minuse"
        android:layout_toStartOf="@+id/minuse" />

    <Button
        android:layout_width="80dp"
        android:layout_height="62dp"
        android:text="\u00D7"
        android:textSize="35dp"
        android:id="@+id/Multi"
        android:background="#de7e16"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/numEqu"
        android:layout_alignStart="@+id/numEqu"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="80dp"
        android:layout_height="62dp"
        android:text="+"
        android:textSize="35dp"
        android:id="@+id/pluse"
        android:background="#de7e16"
        android:layout_alignTop="@+id/Multi"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="62dp"
        android:text="-"
        android:textSize="35dp"
        android:id="@+id/minuse"
        android:background="#de7e16"
        android:layout_above="@+id/pluse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="Scientific"
        android:id="@+id/signtific"
        android:textSize="9dp"
        android:layout_alignTop="@+id/numDot"
        android:layout_alignRight="@+id/num0"
        android:layout_alignEnd="@+id/num0" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="C"
        android:textSize="35dp"
        android:id="@+id/clear"
        android:layout_alignTop="@+id/num3"
        android:layout_alignLeft="@+id/numDot"
        android:layout_alignStart="@+id/numDot" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="Delete"
        android:textSize="14dp"
        android:id="@+id/delete"
        android:layout_alignTop="@+id/clear"
        android:layout_alignRight="@+id/num0"
        android:layout_alignEnd="@+id/num0" />

</RelativeLayout>
